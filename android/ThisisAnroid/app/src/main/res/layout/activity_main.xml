<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:context="com.rhino.study.thisisanroid.MainActivity">

    <!-- ① 좌측 영역에 메뉴 리스트 프래그먼트를 설정한다. -->
    <fragment
        class="com.rhino.study.thisisanroid.ListMenuFragment"
        android:id="@+id/menu_fragment"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"/>

    <!-- ② 우측 영역에 텍스트뷰어 혹은 이미지뷰어 프래그먼트를 포함할
            프래그먼트 컨테이너다. -->
    <FrameLayout
        android:id="@+id/viewer_fragment_container"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"/>
</LinearLayout>
